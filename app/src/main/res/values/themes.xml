<resources>

    <!--    Tanpa ada ActionBar  -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>



    <!-- Style TextView -->
    <style name="TextView"/>

    <style name="TextView.PoppinsSemiBold24White">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.PoppinsLight14White">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/blue_grey_600</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Poppins26white">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextView.Poppins14white">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Poppins12black">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextView.Poppins12white">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Button"/>
    <!--    Style untuk Button  -->
    <style name="Button.Primary">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/shape_rectangle_8_ffc700</item>
    </style>

    <!--    RatingBar   -->
    <style name="RatingBar">
        <item name="colorControlNormal">@color/grey_200</item>
        <item name="colorControlActivated">@color/amber_a400</item>
    </style>

</resources>